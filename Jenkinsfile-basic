#!/usr/bin/env groovy

pipeline {
    agent none
    stages {
        stage('build') {
            steps {
                script {
                    echo "1 Building the application..."
                }
            }
        }
        stage('test') {
            steps {
                script {
                    echo "2 Testing the application..."
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "3 Deploying the application..."
                }
            }
        }
    }
}
